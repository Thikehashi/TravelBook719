<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:clickable="true"
                android:background="?android:attr/windowBackground"
                tools:context=".MainActivity">

    <!--各カテゴリアイコンを設置-->
    <LinearLayout
        android:id="@+id/category_icon_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="21dp"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:background="@drawable/bg_colorlabel_white"
            android:id="@+id/color_white"
            android:checked="true"
            android:layout_margin="@dimen/colorlabel_padding"
            android:layout_width="@dimen/colorlabel_size"
            android:layout_height="@dimen/colorlabel_size"/>

        <Button
            android:id="@+id/category_tourism"
            android:layout_width="@dimen/colorlabel_size"
            android:layout_height="@dimen/colorlabel_size"
            android:layout_margin="@dimen/colorlabel_padding"
            android:foreground="@drawable/category_icon_tourism"
            android:background="@drawable/button_color"/>

        <Button
            android:background="@drawable/category_icon_move"
            android:id="@+id/category_move"
            android:layout_margin="@dimen/colorlabel_padding"
            android:layout_width="@dimen/colorlabel_size"
            android:layout_height="@dimen/colorlabel_size" />


        <Button
            android:layout_margin="@dimen/colorlabel_padding"
            android:background="@drawable/category_icon_lunch"
            android:id="@+id/category_lunch"
            android:layout_width="@dimen/colorlabel_size"
            android:layout_height="@dimen/colorlabel_size" />


        <Button
            android:layout_margin="@dimen/colorlabel_padding"
            android:background="@drawable/category_icon_shopping"
            android:id="@+id/category_shopping"
            android:layout_width="@dimen/colorlabel_size"
            android:layout_height="@dimen/colorlabel_size" />

        <Button
            android:layout_margin="@dimen/colorlabel_padding"
            android:background="@drawable/category_icon_dormitory"
            android:id="@+id/category_dormitory"
            android:layout_width="@dimen/colorlabel_size"
            android:layout_height="@dimen/colorlabel_size" />

        <Button
            android:layout_margin="@dimen/colorlabel_padding"
            android:background="@drawable/category_icon_experience"
            android:id="@+id/category_experience"
            android:layout_width="@dimen/colorlabel_size"
            android:layout_height="@dimen/colorlabel_size" />


    </LinearLayout>

    <!--テキスト入力フォーム-->

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="タイトル"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/editDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="日付"
        android:inputType="textPersonName"
        android:onClick="showTimePickerDialog"
        android:layout_below="@+id/input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/editstartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="開始予定時刻"
        android:layout_below="@+id/editDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:id="@+id/editendTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="終了予定時刻"
        android:layout_below="@+id/editstartTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/category_icon_frame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text="なし"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:text="観光"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.17"
            android:text="移動"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text="食事"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:text="買い物"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:text="宿泊"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:text="体験"
            android:textAlignment="center"/>
    </LinearLayout>

</RelativeLayout>